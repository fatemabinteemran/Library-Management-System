                    <div class="cart-item-details">
                        <div class="cart-item-title">{{ product.name }}</div>
                        <div class="cart-item-price">${{ product.price }}</div>
                        <div class="cart-item-quantity">Quantity: {{ quantities|get_item:product.id }}</div>
                    </div>
                    <button type="button" data-index="{{ product.id }}" class="delete-product">Remove</button>
                </div>
